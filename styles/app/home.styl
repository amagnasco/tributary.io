body.home
  font-size 100%
  font-size 1.4em
  line-height 1.5em
  padding 1em
  font-family "Helvetica Neue", Helvetica, Arial, san-serif
  max-width 800px
  
  
  h1
    font-size 3em
    margin 0
    padding 0
    line-height 1em
    text-align center
    margin-bottom 1em
    
  h2
    font-size 1.7em
    border-left 4px solid #CCC
    padding-left 0.2em
    
  ul#gallery
    padding 0
    
    li
      list-style-type none
      margin 1px
      //padding 1em
      width 33%
      height 220px
      display inline-block
      border 1px solid white
      background-color #CCC
      
      background-position center center
      
      h3
        width 100%
        text-align center
        background-color rgba(white, 0.75)
        padding 0.2em
        
  #gallery-links
    margin 0
    padding 0
    li
      list-style-type none
      display inline-block
      margin-right 1em