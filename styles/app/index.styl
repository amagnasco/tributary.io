@import "nib/vendor";
@import "../mixins"

* { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }


body, html, #container>section, #container { height: 100%; }
body
  height: 100%;
  width 100%
  padding: 0
  margin: 0
  margin-left auto
  margin-right auto
  

.display
  min-width: 180px; /* prevents overflow */
  
  -moz-box-orient: vertical;
  -webkit-box-orient: vertical;
  box-orient: vertical;
  
  -moz-box-ordinal-group: 2;
  -webkit-box-ordinal-group: 2;
  box-ordinal-group: 2;
  
  -moz-box-flex: 1;
  -webkit-box-flex: 1;
  box-flex: 1;    
  background-image: url(unquote('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACAAAAAgAQMAAABJtOi3AAAABlBMVEX4+Pj09PQf/c7fAAAAGklEQVR4Xq3MIQEAAADDIPqX/kvMIMEWEm8O7b0/wewc/NcAAAAASUVORK5CYII%3D'))
  height: 200px
  padding: 5px
  
#icon-bar
  max-width: 48px
  -moz-box-orient: vertical;
  -webkit-box-orient: vertical;
  box-orient: vertical;

  -moz-box-ordinal-group: 2;
  -webkit-box-ordinal-group: 2;
  box-ordinal-group: 2;

  -moz-box-flex: 1;
  -webkit-box-flex: 1;
  box-flex: 1;    
  background-color: red

.panel
  background: #CCC
  height: 100%;
  min-width: 420px;
  width: 180px;
  overflow-y: auto;
  position: relative
  
  -moz-box-ordinal-group: 3;
  -webkit-box-ordinal-group: 3;
  box-ordinal-group: 3;
  
  -moz-align-items: stretch;
  -webkit-align-items: stretch;
  align-items: stretch;
  
  -moz-flex-flow: column;
  -webkit-flex-flow: column;
  flex-flow: column;
  
  #toolbar
    background-color white
    border-color pink
    
  #code
    padding-top: 1em
    z-index: 0
    border-color purple
  
  section
    border 1px solid

.flexbox 
  display:-moz-box;
  display:-webkit-box;
  display: box;
  text-align: left;
 
 
 #container
   height: 100%;
   min-width: 640px; /* prevents overflow */
 
 h1 
   width: auto;