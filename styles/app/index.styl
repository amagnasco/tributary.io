@import "nib/vendor";
@import "../mixins"

sansSerifFonts = "Helvetica Neue", Helvetica, Arial, sans-serif;
serifFonts = Georgia, serif
* { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }


body, html, #container>section, #container { height: 100%; }

body
  height: 100%;
  width 100%
  padding: 0
  margin: 0
  margin-left auto
  margin-right auto
  

.display
  min-width: 180px; /* prevents overflow */
  
  -moz-box-orient: vertical;
  -webkit-box-orient: vertical;
  box-orient: vertical;
  
  -moz-box-ordinal-group: 2;
  -webkit-box-ordinal-group: 2;
  box-ordinal-group: 2;
  
  -moz-box-flex: 1;
  -webkit-box-flex: 1;
  box-flex: 1;    
  background-image: url(unquote('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACAAAAAgAQMAAABJtOi3AAAABlBMVEX4+Pj09PQf/c7fAAAAGklEQVR4Xq3MIQEAAADDIPqX/kvMIMEWEm8O7b0/wewc/NcAAAAASUVORK5CYII%3D'))
  height: 200px
  padding: 5px
  
#icon-bar
  iconFontSize = 26px
  iconBarContentWidth = 200px
  
  font-size: iconFontSize
  line-height: 1.8em;
  text-align: center;
  max-width: iconFontSize + 12
  
  border-right: 1px solid white
  -moz-box-orient: vertical;
  -webkit-box-orient: vertical;
  box-orient: vertical;

  -moz-box-ordinal-group: 2;
  -webkit-box-ordinal-group: 2;
  box-ordinal-group: 2;

  -moz-box-flex: 1;
  -webkit-box-flex: 1;
  box-flex: 1;
  background-color: #CCC
  //margin-right: -20px
  
  #icon-list
    position: relative
    list-style-type none
    margin 0
    padding 0
    height 100%
    z-index: 5
    
    li
      padding: 0
      border-bottom: 1px solid white
      background-color: #CCC
      border-radius: 2px
      
      &:last-child
        border-bottom: 0

      &:hover
        background-color: #999
        
    #icon-bar-content
      
      font-size: 1rem
      padding: 0.4em 0
      background-color: rgba(250,250,250,0.75)
      font-size: 0.7em
      line-height: 1.2em
      text-align: left
      width: iconBarContentWidth
      max-height: 600px;
      overflow: auto;

      position: absolute
      top: 0
      z-index: 1
      left: iconBarContentWidth
      opacity: 0.9

      &.active {
        left: - iconBarContentWidth
      }
      &:hover { 
        opacity: 1; 
      
      }
      
      h1,h2,h3,h4,h5,h6 {
        font-family: sansSerifFonts;
      }
      
      h3
        padding 0.2em 0.5em
        margin 0.25em 0
      ul
        margin 0
        padding 0
        
      li
        border-radius 2px
        list-style-type none
        padding 0.2em 0.5em
        margin 1px 2px
        cursor default
        
      #file-list
        margin 0
        padding 0

      
      #library-list
        margin 0
        padding 0
          
      
        
toolbarHeight = 0//3em      
    
@media (min-width: 1024px)    
  #icon-bar
    iconFontSize = 20px
    font-size: iconFontSize
    max-width: iconFontSize + 12

.panel
  z-index: 5
  background: white
  height: 100%;
  min-width: 420px;
  width: 34%;
  //overflow-y: auto;
  position: relative
  padding-top toolbarHeight
  
  -moz-box-ordinal-group: 3;
  -webkit-box-ordinal-group: 3;
  box-ordinal-group: 3;
  
  -moz-align-items: stretch;
  -webkit-align-items: stretch;
  align-items: stretch;
  
  -moz-flex-flow: column;
  -webkit-flex-flow: column;
  flex-flow: column;
  
  #toolbar
    display none
    background-color: white
    position absolute
    top 0
    z-index 5
    height toolbarHeight
    padding 0.8em 
    width 100%
    border-bottom 1px solid #CCC

    
  #code
    //margin-top 2em
    z-index: 0
    //padding: 0.4em 0.8em
    overflow-x: auto
    height 100%

    
    #codemirror
      height 100%
      .CodeMirror
        height 100%
  

.flexbox 
  display:-moz-box;
  display:-webkit-box;
  display: box;
  text-align: left;
 
 
 #container
   height: 100%;
   min-width: 640px; /* prevents overflow */
 
 h1 
   width: auto;
   
   
.tipsy
  font-family: sansSerifFonts

.valid
  border: 1px solid black
.invalid
  border: 1px solid orange
